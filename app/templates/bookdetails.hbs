{{options-nav-bar}}
<div class="form">
  <h1>BOOK DETAILS</h1>
  <div class="inset">
  	<h6>BOOK NAME</h6>
  	<p id="display">{{model.bookname}}</p>
  	<h6>AUTHOR NAME</h6>
  	<button {{action "authordetail" model.author}}>{{model.author}}</button>
  	<h6>PUBLISHER</h6>
  	<p id="display">{{model.publishedby}}</p>
  	<h6>EDITION</h6>
  	<p id="display">{{model.edition}}</p>
  	<h6>AVAILABLE QUANTITY</h6>
  	<p id="display">{{model.quantity}}</p>
  	</div>
    {{#if isuserstudent}}
    <p id="p-container12">
      <button {{action "reducebookcount" model.id}}>PICK</button>
      <button {{action "increasebookcount"  model.id}}>SUBMIT</button>
    </p>
    {{else}}
    <p id="p-container12">
      <a {{action "delete" model.id}}>{{inline-svg 'basket'}}</a>
      <a {{action "update"  model.id}}>{{inline-svg 'pencil'}}</a>
    </p>
    {{/if}}
  </div>
{{outlet}}

























